<Page
    x:Class="WslToolbox.UI.Views.Pages.DeveloperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WslToolbox.UI.UI.Controls"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <ScrollViewer>
            <Grid VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="This developer page is for testing purposes" Margin="{StaticResource SmallBottomMargin}" />
                    <Button Command="{x:Bind ViewModel.TestWindow}" CommandParameter="{x:Bind}" Content="Test" MinWidth="{StaticResource ButtonMinWidth}" />
                    
                    <controls:CustomExpander Header="This text is in the header" Content="This is in the content" />

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>