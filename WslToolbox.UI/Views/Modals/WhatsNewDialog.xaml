<ContentDialog
    x:Class="WslToolbox.UI.Views.Modals.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    Title="{x:Bind ViewModel.Title}"
    PrimaryButtonText="Save"
    Loaded="WhatsNewDialog_OnLoaded"
    PrimaryButtonCommand="{x:Bind ViewModel.SaveConfigurationCommand}">
    <ContentDialog.Resources>
        <converters:BoolToVisibilityConverter x:Key="VisibilityConverter" />
    </ContentDialog.Resources>
    <Grid>
        <StackPanel Spacing="20">
            <StackPanel Spacing="4">
                <TextBlock Text="Whats new?" Margin="0,0,0,4"
                           TextWrapping="Wrap" />
                <WebView2 x:Name="WhatsNewViewer" MinHeight="200" MinWidth="100" DefaultBackgroundColor="Transparent" />
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>