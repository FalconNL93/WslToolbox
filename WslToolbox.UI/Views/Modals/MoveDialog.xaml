<ContentDialog
    x:Class="WslToolbox.UI.Views.Modals.MoveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    PrimaryButtonText="Import"
    CloseButtonText="Cancel"
    Title="Import distribution">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="{StaticResource DefaultSpacing}">
        <TextBlock Text="Name" />
        <TextBox Text="{x:Bind ViewModel.Distribution.BasePath, Mode=OneWay}" />
        <TextBlock Text="Directory" />
        <TextBox Text="{x:Bind ViewModel.Directory, Mode=TwoWay}" />
        <Button Content="Browse..." Command="{x:Bind ViewModel.BrowseFolderCommand}" CommandParameter="{x:Bind ViewModel.Distribution.BasePath, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>