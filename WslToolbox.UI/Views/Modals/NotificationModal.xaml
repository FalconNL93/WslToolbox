<views:ModalPage
    x:Class="WslToolbox.UI.Views.Modals.NotificationModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:WslToolbox.UI.Contracts.Views">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="{x:Bind Message}" Margin="{StaticResource SmallBottomMargin}" />
        <ProgressBar HorizontalAlignment="Stretch" IsIndeterminate="True" ShowPaused="False" ShowError="False" />
    </StackPanel>
</views:ModalPage>