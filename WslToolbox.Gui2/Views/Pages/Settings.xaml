<ui:UiPage
    x:Class="WslToolbox.Gui2.Views.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:WslToolbox.Gui2.Views.Pages"
    xmlns:userControls="clr-namespace:WslToolbox.Gui2.UserControls"
    Title="Settings"
    d:DataContext="{d:DesignInstance local:Settings, IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    Scrollable="True"
    mc:Ignorable="d">

    <Grid Margin="18,0,18,18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <userControls:CardOption
                HeaderContent="Docker distributions"
                DescriptionContent="Show docker distributions in overview"
                Enabled="{Binding ViewModel.Options.HideDockerDist, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</ui:UiPage>