<mah:MetroWindow x:Class="WslToolbox.Gui.Views.MainView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:WslToolbox.Gui.Configurations"
                 mc:Ignorable="d"
                 Title="{Binding Source={x:Static local:AppConfiguration.AppName}}"
                 Height="341" Width="592"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanResize" WindowStyle="SingleBorderWindow"
                 Icon="/Resources/Images/AppIcon.png"
                 SizeToContent="WidthAndHeight" ShowIconOnTitleBar="False"
                 xmlns:h="clr-namespace:WslToolbox.Gui.Helpers"
                 StateChanged="MetroWindow_StateChanged">
    <mah:MetroWindow.Resources>
        <h:BoolToValueConverter x:Key="BoolToValueConverter" />
    </mah:MetroWindow.Resources>
    <Grid Margin="5,0,5,0">
        <mah:MetroAnimatedTabControl HorizontalAlignment="Left" Height="303" Margin="5,5,5,5" VerticalAlignment="Top"
                                     Width="559" mah:HeaderedControlHelper.HeaderFontSize="20"
                                     mah:HeaderedControlHelper.HeaderFontStretch="Medium"
                                     mah:HeaderedControlHelper.HeaderFontWeight="Normal">
            <mah:MetroAnimatedTabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Margin" Value="10,10,0,10" />
                </Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
                    <Setter Property="Margin" Value="0,5,0,0" />
                    <Setter Property="Width" Value="106" />
                    <Setter Property="Height" Value="28" />
                </Style>
            </mah:MetroAnimatedTabControl.Resources>
            <TabItem Header="Distributions">
                <Grid>
                    <mah:DropDownButton x:Name="ControlMenuButton" HorizontalAlignment="Left" Height="28"
                                        Margin="8,10,0,0" VerticalAlignment="Top" Width="140" Content="Manage..." />
                    <DataGrid Margin="8,49,10,10" x:Name="DistributionDetails"
                              SelectionChanged="DistributionDetails_SelectionChanged" SelectionMode="Single"
                              IsReadOnly="True"
                              AutoGenerateColumns="false" MinColumnWidth="100"
                              SelectedItem="{Binding SelectedDistribution,Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="State" Binding="{Binding State}" />
                            <DataGridTextColumn Header="WSL Version" Binding="{Binding Version}" />
                            <DataGridTextColumn Header="Default"
                                                Binding="{Binding IsDefault, Converter={StaticResource BoolToValueConverter}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="WSL Service">
                <Grid>
                    <ItemsControl x:Name="ServiceItems" HorizontalAlignment="Left" />
                </Grid>
            </TabItem>
            <TabItem Header="Other">
                <Grid>
                    <ItemsControl x:Name="OtherItems" HorizontalAlignment="Left" />
                </Grid>
            </TabItem>
        </mah:MetroAnimatedTabControl>
    </Grid>
</mah:MetroWindow>