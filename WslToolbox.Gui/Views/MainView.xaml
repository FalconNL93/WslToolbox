<mah:MetroWindow x:Class="WslToolbox.Gui.Views.MainView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:WslToolbox.Gui.Configurations"
                 mc:Ignorable="d"
                 Title="{Binding Source={x:Static local:AppConfiguration.AppName}}"
                 Height="421" Width="626"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow"
                 Icon="/Resources/Images/toolbox.png"
                 SizeToContent="WidthAndHeight" ShowIconOnTitleBar="False"
                 StateChanged="MetroWindow_StateChanged">
    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*" />
            <ColumnDefinition Width="63*" />
            <ColumnDefinition Width="187*" />
        </Grid.ColumnDefinitions>
        <DataGrid Margin="8,41,10,10" x:Name="DistroDetails" Grid.Column="2"
                  SelectionChanged="DistroDetails_SelectionChanged" SelectionMode="Single" IsReadOnly="True"
                  AutoGenerateColumns="false" MinColumnWidth="100"
                  SelectedItem="{Binding SelectedDistribution,Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="State" Binding="{Binding State}" />
                <DataGridTextColumn Header="WSL Version" Binding="{Binding Version}" />
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="DefaultDistribution" Content="DefaultDistribution" Grid.Column="2" HorizontalAlignment="Left"
               Margin="68,10,0,0" VerticalAlignment="Top" Width="165" />
        <Label Content="Default:" HorizontalAlignment="Left" Margin="8,10,0,0" VerticalAlignment="Top"
               FontWeight="Bold" Height="26" Width="55" Grid.Column="2" />
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="0,10,0,19" Width="106">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
                    <Setter Property="Margin" Value="0,5,0,0" />
                    <Setter Property="Width" Value="106" />
                    <Setter Property="Height" Value="28" />
                </Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Margin" Value="0,5,0,0" />
                </Style>
            </StackPanel.Resources>
            <Label Content="WSL Service" FontWeight="Bold" />
            <Button x:Name="StartWsl" Content="Start" Command="{Binding StartWslServiceCommand}" />
            <Button x:Name="StopWsl" Content="Stop" Command="{Binding StopWslServiceCommand}" />
            <Button x:Name="RestartWsl" Content="Restart"
                    Command="{Binding RestartWslServiceCommand}" />
            <Button x:Name="UpdateWsl" Content="Update" />
            <Button x:Name="RefreshWsl" Content="Refresh" />
            <Label Content="Toolbox" FontWeight="Bold" Margin="0,10,0,0" />
            <Button x:Name="ToolboxSettings" Content="Settings" />
            <Button x:Name="ToolboxOutput" Content="Open log" Command="{Binding OpenLogFileCommand}" />
            <Button x:Name="ExitButton" Content="Exit" Command="{Binding ExitApplicationCommand}" />
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="366" Margin="10,10,0,0" VerticalAlignment="Top"
                    Width="106">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
                    <Setter Property="Margin" Value="0,5,0,0" />
                    <Setter Property="Width" Value="106" />
                    <Setter Property="Height" Value="28" />
                </Style>
                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Margin" Value="0,5,0,0" />
                </Style>
            </StackPanel.Resources>
            <Label Content="Distribution" FontWeight="Bold" Margin="0,0,0,0" />
            <Button x:Name="DistroStart" Content="Start" Command="{Binding StartDistributionCommand}"
                    CommandParameter="{Binding SelectedDistribution}" />
            <Button x:Name="DistroStop" Content="Stop" Command="{Binding StopDistributionCommand}"
                    CommandParameter="{Binding SelectedDistribution}" />
            <Button x:Name="DistroRestart" Content="Restart" />
            <Button x:Name="DistroSetDefault" Content="Set default" />
            <Button x:Name="DistroConvert" Content="Convert" />
            <Button x:Name="DistroShell" Content="Start shell" />
            <Separator />
            <Button x:Name="DistroInstall" Content="Install" />
            <Button x:Name="DistroImport" Content="Import" />
            <Button x:Name="DistroExport" Content="Export" />
            <Button x:Name="DistroUninstall" Content="Delete" />
        </StackPanel>
        <mah:ProgressRing x:Name="Activity" Grid.Column="2" HorizontalAlignment="Right" Margin="0,13,10,0"
                          VerticalAlignment="Top" Height="19" Width="16" IsActive="false" />
    </Grid>
</mah:MetroWindow>