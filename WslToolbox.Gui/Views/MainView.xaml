<mah:MetroWindow x:Class="WslToolbox.Gui.Views.MainView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:WslToolbox.Gui.Configurations"
                 mc:Ignorable="d"
                 Title="{Binding Source={x:Static local:AppConfiguration.AppName}}"
                 Height="341" Width="592"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow"
                 Icon="/Resources/Images/toolbox.png"
                 SizeToContent="WidthAndHeight" ShowIconOnTitleBar="False"
                 StateChanged="MetroWindow_StateChanged">
    <Grid Margin="5,0,5,0">
        <mah:MetroAnimatedTabControl HorizontalAlignment="Left" Height="303" Margin="5,5,5,5" VerticalAlignment="Top"
                                     Width="559" mah:HeaderedControlHelper.HeaderFontSize="20"
                                     mah:HeaderedControlHelper.HeaderFontStretch="Medium"
                                     mah:HeaderedControlHelper.HeaderFontWeight="Normal">
            <mah:MetroAnimatedTabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Margin" Value="10,10,0,10" />
                </Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
                    <Setter Property="Margin" Value="0,5,0,0" />
                    <Setter Property="Width" Value="106" />
                    <Setter Property="Height" Value="28" />
                </Style>
            </mah:MetroAnimatedTabControl.Resources>
            <TabItem Header="Distributions">
                <Grid>
                    <Label x:Name="DefaultDistribution" Content="DefaultDistribution" HorizontalAlignment="Left"
                           Margin="68,10,0,0" VerticalAlignment="Top" Width="165" />
                    <Label Content="Default:" HorizontalAlignment="Left" Margin="8,10,0,0" VerticalAlignment="Top"
                           FontWeight="Bold" Height="26" Width="55" />
                    <DataGrid Margin="8,41,10,10" x:Name="DistroDetails"
                              SelectionChanged="DistroDetails_SelectionChanged" SelectionMode="Single"
                              IsReadOnly="True"
                              AutoGenerateColumns="false" MinColumnWidth="100"
                              SelectedItem="{Binding SelectedDistribution,Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="State" Binding="{Binding State}" />
                            <DataGridTextColumn Header="WSL Version" Binding="{Binding Version}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="WSL">
                <Grid>
                    <StackPanel HorizontalAlignment="Left" Width="106">
                        <Button x:Name="StartWsl" Content="Start" Command="{Binding StartWslServiceCommand}" />
                        <Button x:Name="StopWsl" Content="Stop" Command="{Binding StopWslServiceCommand}" />
                        <Button x:Name="RestartWsl" Content="Restart"
                                Command="{Binding RestartWslServiceCommand}" />
                        <Button x:Name="UpdateWsl" Content="Update" />
                        <Button x:Name="RefreshWsl" Content="Refresh" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Other">
                <Grid>
                    <StackPanel HorizontalAlignment="Left" Width="106">
                        <Button x:Name="ToolboxSettings" Content="Settings" />
                        <Button x:Name="ToolboxOutput" Content="Open log" Command="{Binding OpenLogFileCommand}" />
                        <Button x:Name="ExitButton" Content="Exit" Command="{Binding ExitApplicationCommand}" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </mah:MetroAnimatedTabControl>
    </Grid>
</mah:MetroWindow>