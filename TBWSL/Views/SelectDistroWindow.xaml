<Window x:Class="WslToolbox.Views.SelectDistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="192" Width="278" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Resources/Images/toolbox.png" SizeToContent="Height">
    <Grid Margin="10,10,10,12">
        <Label Content="Select distribution to install" Margin="10,6,10,0" FontWeight="Bold" Height="26" VerticalAlignment="Top" />
        <ComboBox x:Name="AvailableDistros" Margin="10,32,10,0" IsReadOnly="True" Height="24" VerticalAlignment="Top" />
        <Button Content="Install" Margin="0,63,10,0" Click="Button_Click" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="82" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,63,0,0" Width="82" Click="Button_Click_1" Height="24" VerticalAlignment="Top" />
        <TextBlock x:Name="NoticeBlock" Margin="10,92,10,10" Text="Notice" TextWrapping="Wrap"/>
    </Grid>
</Window>