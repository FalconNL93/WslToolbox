<Window x:Class="WslToolbox.Views.SelectDistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="171" Width="278" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Resources/Images/toolbox.png" SizeToContent="Height">
    <Grid Margin="10,10,10,12">
        <GroupBox Header=" Select distribution " Margin="0,0,0,10">
            <Grid>
                <ComboBox x:Name="AvailableDistros" Margin="10,10,10,0" IsReadOnly="True" Height="24" VerticalAlignment="Top" SelectionChanged="AvailableDistros_SelectionChanged"/>
                <Button x:Name="InstallDistro" Content="Install" Margin="0,39,10,0" Click="InstallDistro_Click" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="82" IsEnabled="False" />
                <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,39,0,0" Width="82" Click="Button_Click_1" Height="24" VerticalAlignment="Top" />
                <TextBlock x:Name="NoticeBlock" Margin="10,68,10,10" Text="Notice" TextWrapping="Wrap" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>